
IF NOT EXISTS (SELECT * FROM sys.external_file_formats WHERE name = 'SynapseDelimitedTextFormat') 
	CREATE EXTERNAL FILE FORMAT [SynapseDelimitedTextFormat] 
	WITH ( FORMAT_TYPE = DELIMITEDTEXT ,
	       FORMAT_OPTIONS (
			 FIELD_TERMINATOR = ',',
			 FIRST_ROW = 2,
			 USE_TYPE_DEFAULT = FALSE
			))
GO

IF NOT EXISTS (SELECT * FROM sys.external_data_sources WHERE name = 'divvy-file-system_divvydl_dfs_core_windows_net') 
	CREATE EXTERNAL DATA SOURCE [divvy-file-system_divvydl_dfs_core_windows_net] 
	WITH (
		LOCATION = 'abfss://divvy-file-system@divvydl.dfs.core.windows.net' 
	)
GO
